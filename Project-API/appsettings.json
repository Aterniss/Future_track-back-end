{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp} [{Level}] - Message: {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"Api-Project": "server=DVT-CHANGEME;database=Devoteam-project;Trusted_Connection=true"
    "Api-Project": "Server=tcp:dominik-lichota-server.database.windows.net;Authentication=Active Directory Default; Database=devoteam-project;"

  }
}
